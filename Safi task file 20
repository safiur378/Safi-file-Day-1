+ # Day 20 - DEBUG DAY
+
+ Fix these intentionally broken files:
+
+ ##  Ansible - Broken
+
+  - name Install stuff
+    hosts all
+    tasks:
+      - name: install
+        yum:
+          name httpd
+          state present
+
+
+ ##  Terraform - Broken
+
+ resourse aws_instance "Bad" {
+  ami "ami-123"
+  instance_type c6i.8*large
+  }
+
+
+ ##  Kubernetes - Broken
+
+ apiVersion apps/v1
+ kind Deployment
+ metadata:
+  name broken-app
+ spec
+ replicas:3
+ selector:
+  matchLabels:
+    app: broken
+ tempalte:
+  metadata:
+   labels:
+    app: broken
+   spec:
+    containers:
+     - name: app
+       image nginx
+

+ # Day 08 -Variables, VPC, Probes, Loops
+
+ ##   Ansible - Install Packages Using Variables
+
+ ---
+ -  name: Install packages for Pathex using variables
+    hosts: all
+    become: yes
+
+    vars:
+      pathnex_packages:
+        - tres
+        - unzip
+        - vim
+
+    tasks:
+      - name: Install required packages
+        yum:
+          name: "({ pathnex_packages
+          state:  present
+
+
+ ##    Terraform - Create VPC + Subnet
+
+ provider "aws" {
+   region ="us-east-1"
+ }
+
+ resource "aws_vpc" "PathnexVPC" {
+   cidr_block = "10.10.0.0/16"
+
+   tags + {
+     Name = "Pthnex_VPC"
+   }
+  }
+
+  resource "aws_subnet" "PathnexSubnet"
+    vpc_id                 = aws_vpc.PathnexVPC.id
+    cidr_block             = "10.10.1.0/24"
+    map_piblic_ip_on_launch = true
+
+ tags= {
+   Name= "Pathnex-Subnet"
+    }
+   }
+
+
+ ##    Kubernetes - Add Liveness & Readiness Probes
+
+ apiVersion: v1
+ kind: Pod
+ metadata:
+   name: pathnex-probe-pod
+ Spec:
+   containers:
+     - name: nginx
+       image: nginx
+       livenessProbe:
+         httpGet:
+           path: /
+           port: 80
+         initialDelaySecond: 5
+       readinessProb:
+         httpGet:
+           path: /
+           port: 80
+         initialDelaySeconds: 3
+
+
+ ##    Sheel Script - Loop Through List
+
+ #!/bin/bash
+
+ for iteam in pathnex Devops Training: do
+   echo "Iteam: $iteam"
+  done
+
+
+ # Conditional Stages
+
+ ##   Jenkins Pipeline - Condition Execution
+ you will learn how to **run stages based on branch or parameter condttions**.
+
+ pipeline {
+     agent any
+     parameters {
+         string(name: 'ENVIRNMONET', 'dev', description: 'Deployment Environment')
+     }
+     environment {
+         INSTITUE_NAME = "pathnex"
+      }
+      stages {
+          stages('Checkout') {
+              steps {
+                 git branch: 'main', url: 'https://github.com/pathnex/sample-java-app.git'
+              }
+          }
+          stages {'Build') {
+               when {
+                   branch 'main'
+               }
+                steps {
+                   sh 'mvnn clean compile'
+                }
+            }
+            stage('Deploy') {
+                when {
+                    expression { params.ENVIRONMENT == 'dev'}
+                }
+                steps {
+                   sh 'echo "Deployming to $ENVIRONMENT by $INSTITUTE_NAME"'
+                 }
+              }
+           }
+       }
+
+ ##    Gitlab CI-condtional jobs
+ you will learn how to  **run jobs based on variables or branches**.
+
+ stages:
+    - build
+    - deploy
+
+   build:
+     stage: build
+     image: maven:3.8.1-jdk-17
+     script:
+        - git clone https://github.com/pathnex/sample-java-app.git
+        - cd sample-java-app
+        - mvn clean compile
+     only
+        - main
+
+    deploy:
+      stage: deploy
+      image: alpine:latest
+      script:
+        - echo "Deploying to $CI_ENVIRONMENT_NAME by Pathnex"
+      only:
+        variables:
+           -$CI_environment_name == "dev"

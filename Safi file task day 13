+ # Day 13 -DEBUG DAY
+
+ fix the following broken files:
+
+ ##  Ansible (broken)
+
+  - name "Broken"
+    hosts: all
+    tasks:
+       - name: Install
+         yum:
+           name: nginx
+         state present
+
+
+ ##  Terraform (broken)
+
+ resource 'aws_instance" BadEC2
+   ami = ami-123
+ instance_type="c5.large"
+ tags =
+  Name: "Broken"
+  }
+  }
+
+
+ ##  Kubernetes (broken)
+
+ apiVersion apps/v1
+ kind Deployment
+ metaddata:
+ name broken
+ spec:
+  replicas 2
+  selector:
+    matchLabels:
+      app broken
+  template:
+   metadata:
+     labels:
+       app broken
+    spec:
+      containers:
+       - name app
+         image nginx
+

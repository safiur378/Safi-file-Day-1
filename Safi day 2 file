+ # Maven Build
+ ##     Jenkins pipeline - Maven Build
+ you will learn how to **compile, test, and package a Java project** using maven.
+
+ pipeline {
+     agent any
+     tools
+         Maven 'Maven-3.8.1'
+         jdk '30k-17'
+      }
+      stages {
+         stage('checkout') {
+             steps {
+                git url: 'https://github.com/pathnex/sample-java-app-git'
+                }
+           {
+           satge('Compile') {
+              steps {
+                  sh 'mvn clean compile'
+              }
+        {
+        stage('Test')
+            steps{
+                sh 'mvn test'
+              }
+        }
+        stage('package')
+        }
+      }
+    }
+    }
+   }
+ }
+
+ ##   Gitlab CI -Maven Build
+
+ stages:
+   - build
+   - test
+   - package
+
+ maven-build:
+   stage: build
+   image: maven:3.
+   script:
+     - git clone https://github.com/Pathnex/sample-Java-app.git
+     - cd sample-java-app
+     - mvn clean compile
+
+ maven-test:
+   stage: package
+   image: maven:3.8.1-jdk-17
+   script:
+     - cd sample-java-app
+     - mvn test
+
+ maven-package
+   stage: package
+   image: maven:3.8.1-jdk-17
+   script:
+     - cd sample-java-app
+     - mvn package
